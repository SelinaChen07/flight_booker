<h2>Pick up a flight</h2>
<%= form_tag(new_booking_path, method: :get) do %>
	<table>
		<thead>
			<tr>
				<th>Select</th>
				<th>Flight Number</th>
				<th>From</th>
				<th>To</th>
				<th>Start Time</th>
				<th>Duration</th>
			</tr>
		</thead>
		<tbody>
			<% @flights.each do |f| %>
					<tr>
						<td><%= radio_button_tag(:flight, f.id) %></td>
						<td><%= label_tag("flight_#{f.id}", f.flight_number) %></td>
						<td><%= f.from_airport.airport_code %></td>
						<td><%= f.to_airport.airport_code %></td>
						<td><%= f.start_time %></td>
						<td><%= "#{f.duration_in_minutes/60}h #{f.duration_in_minutes%60}min" %></td>
					</tr>			
			<% end %>
		</tbody>
	</table>	
	<%= hidden_field_tag :passenger, @passengers %>
	<%= submit_tag "Select Flight" %>
<% end %>